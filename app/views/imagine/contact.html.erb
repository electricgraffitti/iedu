<div id="contact" class="content_block">
	<div id="contact_form">
		<header>Contact Imagine Education</header>
			<%= form_tag :contact_form_path do %>
				<div class="form_section">
					<div class="field">
						<%= label_tag "Name" %>
						<%= text_field_tag :name, nil, :placeholder => "Enter Name" %>
					</div>
					<div class="field">
						<%= label_tag "Email" %>
						<%= text_field_tag :email, nil, :placeholder => "Enter Email" %>
					</div>
					<div class="field">
						<%= label_tag "Phone" %>
						<%= text_field_tag :phone, nil, :placeholder => "Enter Phone" %>
					</div>
					<div class="field">
						<%= label_tag "Reason" %>
						<%= text_field_tag :reason %>
					</div>
				</div>
				<div class="form_section">
					<div class="field">
						<%= label_tag "Comments" %>
						<%= text_area_tag :comments %>
					</div>
					<div class="field">
						<%= submit_tag "Send Info", :class => "button blue_button" %>
					</div>
				</div>
			<% end %>
			<div class="contact_info">
				Imagine Education - P.O. Box 2276 - Taos, NM - 87571 - (575)-224-1480
			</div>		
	</div>
</div>